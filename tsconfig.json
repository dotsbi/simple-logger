{
  "compilerOptions": {
    /* Output Options */
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "inlineSourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Types */
    "typeRoots": ["./node_modules/@types"]
  },
  "files": ["src/index.ts"]
}
